{
  "name": "docs",
  "version": "1.0.0",
  "description": "Documentation for the Ghost publishing platform",
  "repository": "git@github.com:TryGhost/docs.git",
  "author": "Ghost Foundation",
  "license": "MIT",
  "main": "app.js",
  "scripts": {
    "serve": "gatsby build && NODE_ENV=production gatsby serve",
    "build": "gatsby build",
    "dev": "gatsby develop",
    "lint": "eslint . --ext .js --cache",
    "posttest": "yarn lint",
    "test": "NODE_ENV=testing mocha -- $(find test -name '*.test.js')",
    "preship": "yarn test",
    "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi",
    "master": "git pull -r origin master --autostash && cd content/api/v2 && git pull -r origin master --autostash && cd ../../../ && yarn"
  },
  "devDependencies": {
    "autoprefixer": "9.2.0",
    "cssnano": "4.1.4",
    "eslint": "5.7.0",
    "eslint-plugin-ghost": "0.0.27",
    "eslint-plugin-react": "^7.11.1",
    "ghost-spirit": "0.0.47",
    "mocha": "^5.2.0",
    "postcss-color-mod-function": "^3.0.3",
    "postcss-css-variables": "^0.11.0",
    "postcss-custom-media": "7.0.6",
    "postcss-custom-properties": "8.0.8",
    "postcss-easy-import": "^3.0.0",
    "should": "^13.2.3",
    "sinon": "7.0.0"
  },
  "dependencies": {
    "algolia-html-extractor": "^0.0.1",
    "bluebird": "3.5.2",
    "gatsby": "2.0.24",
    "gatsby-plugin-algolia": "^0.2.0",
    "gatsby-plugin-catch-links": "^2.0.5",
    "gatsby-plugin-force-trailing-slashes": "^1.0.4",
    "gatsby-plugin-manifest": "2.0.5",
    "gatsby-plugin-offline": "2.0.6",
    "gatsby-plugin-postcss": "^2.0.0",
    "gatsby-plugin-react-helmet": "3.0.0",
    "gatsby-plugin-react-svg": "^2.0.0-beta1",
    "gatsby-plugin-remove-serviceworker": "^1.0.0",
    "gatsby-plugin-sharp": "^2.0.7",
    "gatsby-plugin-sitemap": "^2.0.1",
    "gatsby-remark-autolink-headers": "2.0.7",
    "gatsby-remark-code-titles": "^1.0.2",
    "gatsby-remark-external-links": "^0.0.4",
    "gatsby-remark-images": "^2.0.4",
    "gatsby-remark-prismjs": "3.0.2",
    "gatsby-source-filesystem": "2.0.4",
    "gatsby-source-ghost": "2.1.2",
    "gatsby-transformer-remark": "2.1.7",
    "gatsby-transformer-sharp": "^2.1.4",
    "gatsby-transformer-yaml": "2.1.3",
    "prismjs": "^1.15.0",
    "react": "16.5.2",
    "react-autosuggest": "^9.4.2",
    "react-dom": "16.5.2",
    "react-google-recaptcha": "^1.0.4",
    "react-helmet": "^5.2.0",
    "react-instantsearch-dom": "^5.3.1",
    "react-modal": "^3.6.1",
    "tocbot": "^4.4.0"
  }
}
